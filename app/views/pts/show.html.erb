<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <%= content_tag :div, class:"fotos model3d", id:"modelPt"+@pt.id.to_s,
        'data-fid' => "modelPt"+@pt.id.to_s, 'data-model3d' => @pt.model3d_fn do %>
        <%= image_tag "model_base.jpg", class:"img-responsive foto" %>
      <% end %>
    </div>
    <div class="col-sm-2">
      <% if @pt.fichas %>
        <div class="row">
          <div class="col-xs-5">
            <p class="text-right"> </p>
          </div>
          <div class="col-xs-4">
            <p class="text-right"> </p>
          </div>
          <div class="col-xs-3">
            <p class="text-right">Precio</p>
          </div>
        </div>
        <% @pt.fichas.each do |ficha| %>
          <div class="row">
            <div class="col-xs-5">
                <%= link_to(ficha_path(ficha)) do %>
                <%= image_tag ficha.imagen_fn, class:"img-responsive" %>
                <% end %>
            </div>
            <div class="col-xs-4">
              <p class="text-right"><small><%= ficha.des %></small></p>
            </div>
            <div class="col-xs-3">
              <p class="text-right"><small><%= ficha.pv %></small></p>
            </div>
          </div>
        <% end %>
        <div class="row">
          <div class="col-xs-9">
            <p class="text-right">Total:</p>
          </div>
          <div class="col-xs-3">
            <%= @pt.pv %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="row">
  <%= link_to(edit_pt_path(@pt)) do %>
  <span class="glyphicon glyphicon-pencil"></span>
  <% end %>
  <%= link_to(pts_path) do %>
  <span class="glyphicon glyphicon-arrow-left"></span>
  <% end %>
  <%= link_to(pt_path(@pt, :format => "pdf")) do %>
  <span class="glyphicon glyphicon-print"></span>
  <% end %>
</div>
